@model List<Modelo.Product>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container py-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2 class="mb-0">Lista de Produtos</h2>
        </div>

        <div class="card-body px-4">

            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
                <a asp-action="Create" asp-controller="Product" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Novo Produto
                </a>

                <a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-outline-secondary">
                    <i class="bi bi-filetype-txt me-1"></i> Exportar Dados
                </a>
            </div>

            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-sm table-bordered align-middle text-center shadow-sm">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%">ID</th>
                                <th class="text-start">Nome</th>
                                <th style="width: 7%">Excluir</th>
                                <th style="width: 7%">Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td class="text-start">@product.ProductName</td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-sm btn-danger" title="Excluir Produto">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-sm btn-warning text-white" title="Editar Produto">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center mt-4 mb-0" role="alert">
                    Não existem registros de produtos.
                </div>
            }

        </div>
    </div>
</div>
